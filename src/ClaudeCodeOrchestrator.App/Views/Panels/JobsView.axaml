<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ClaudeCodeOrchestrator.App.ViewModels.Docking"
             xmlns:vmBase="using:ClaudeCodeOrchestrator.App.ViewModels"
             xmlns:local="using:ClaudeCodeOrchestrator.App.Views.Panels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="ClaudeCodeOrchestrator.App.Views.Panels.JobsView"
             x:DataType="vm:JobsViewModel"
             AutomationProperties.AutomationId="JobsPanel"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch"
             Background="#1E1E1E">

    <Grid RowDefinitions="Auto,*">
        <!-- Configuration Section -->
        <Border Grid.Row="0"
                Background="#252526"
                BorderBrush="#3C3C3C"
                BorderThickness="0,0,0,1"
                Padding="8">
            <StackPanel Spacing="8">
                <!-- Max Iterations -->
                <Grid ColumnDefinitions="Auto,*">
                    <TextBlock Grid.Column="0"
                               Text="Max Iterations:"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />
                    <NumericUpDown Grid.Column="1"
                                   Value="{Binding MaxIterations}"
                                   Minimum="1"
                                   Maximum="1000"
                                   Increment="1"
                                   FormatString="0"
                                   HorizontalAlignment="Stretch"
                                   AutomationProperties.AutomationId="MaxIterationsInput" />
                </Grid>

                <!-- Session Option -->
                <Grid ColumnDefinitions="Auto,*">
                    <TextBlock Grid.Column="0"
                               Text="Session:"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />
                    <ComboBox Grid.Column="1"
                              SelectedIndex="{Binding SessionOptionIndex}"
                              HorizontalAlignment="Stretch"
                              AutomationProperties.AutomationId="SessionOptionCombo">
                        <ComboBoxItem Content="Resume Session" />
                        <ComboBoxItem Content="New Session" />
                    </ComboBox>
                </Grid>

                <!-- Prompt Option -->
                <Grid ColumnDefinitions="Auto,*">
                    <TextBlock Grid.Column="0"
                               Text="Prompt:"
                               Foreground="#CCCCCC"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding PromptOptions}"
                              SelectedItem="{Binding SelectedPromptOption}"
                              HorizontalAlignment="Stretch"
                              AutomationProperties.AutomationId="PromptOptionCombo">
                        <ComboBox.ItemTemplate>
                            <DataTemplate DataType="{x:Type vm:PromptOptionItem}">
                                <TextBlock Text="{Binding DisplayName}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>

                <!-- Prompt Description (shown when NOT custom) -->
                <Border Background="#1E1E1E"
                        CornerRadius="4"
                        Padding="8"
                        IsVisible="{Binding !IsCustomPromptSelected}">
                    <TextBlock Text="{Binding SelectedPromptOption.Description}"
                               Foreground="#858585"
                               FontSize="11"
                               TextWrapping="Wrap" />
                </Border>

                <!-- Custom Prompt Section (shown when Other is selected) -->
                <StackPanel Spacing="8" IsVisible="{Binding IsCustomPromptSelected}">
                    <!-- Saved Prompts Dropdown -->
                    <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="Saved:"
                                   Foreground="#CCCCCC"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0" />
                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding SavedPrompts}"
                                  SelectedItem="{Binding SelectedSavedPrompt}"
                                  HorizontalAlignment="Stretch"
                                  AutomationProperties.AutomationId="SavedPromptsCombo">
                            <ComboBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type vm:SavedPrompt}">
                                    <TextBlock Text="{Binding Title}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Button Grid.Column="2"
                                Command="{Binding SaveCustomPromptCommand}"
                                Content="ðŸ’¾"
                                Padding="6,2"
                                Margin="4,0,0,0"
                                ToolTip.Tip="Save prompt"
                                AutomationProperties.AutomationId="SavePromptButton" />
                        <Button Grid.Column="3"
                                Command="{Binding DeleteSavedPromptCommand}"
                                Content="ðŸ—‘"
                                Padding="6,2"
                                Margin="4,0,0,0"
                                ToolTip.Tip="Delete saved prompt"
                                IsEnabled="{Binding SelectedSavedPrompt, Converter={x:Static ObjectConverters.IsNotNull}}"
                                AutomationProperties.AutomationId="DeletePromptButton" />
                    </Grid>

                    <!-- Custom Title -->
                    <Grid ColumnDefinitions="Auto,*">
                        <TextBlock Grid.Column="0"
                                   Text="Title:"
                                   Foreground="#CCCCCC"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0" />
                        <TextBox Grid.Column="1"
                                 Text="{Binding CustomPromptTitle}"
                                 Watermark="Enter prompt title..."
                                 HorizontalAlignment="Stretch"
                                 AutomationProperties.AutomationId="CustomPromptTitle" />
                    </Grid>

                    <!-- Custom Prompt Text -->
                    <TextBlock Text="Prompt:"
                               Foreground="#CCCCCC"
                               Margin="0,0,0,4" />
                    <TextBox Text="{Binding CustomPromptText}"
                             Watermark="Enter your custom prompt..."
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             MinHeight="60"
                             MaxHeight="120"
                             AutomationProperties.AutomationId="CustomPromptText" />
                </StackPanel>

                <!-- Commit on End of Turn Checkbox -->
                <CheckBox IsChecked="{Binding CommitOnEndOfTurn}"
                          Content="Commit on End of Turn"
                          Foreground="#CCCCCC"
                          AutomationProperties.AutomationId="CommitOnEndOfTurnCheckbox" />

                <!-- New Job Button -->
                <Button Command="{Binding CreateNewJobCommand}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"
                        Padding="8,6"
                        Margin="0,4,0,0"
                        Background="#4EC9B0"
                        Foreground="White"
                        FontWeight="SemiBold"
                        AutomationProperties.AutomationId="NewJobButton">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="+" FontSize="14" VerticalAlignment="Center" />
                        <TextBlock Text="New Job" VerticalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Job Worktrees List -->
        <ListBox Grid.Row="1"
                 x:Name="WorktreesList"
                 ItemsSource="{Binding Worktrees}"
                 SelectedItem="{Binding SelectedWorktree}"
                 Background="Transparent"
                 Padding="0,0,0,8">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type vmBase:WorktreeViewModel}">
                    <Border Padding="8,6" Margin="2">
                        <StackPanel Spacing="4">
                            <!-- Row 1: Title and status badge -->
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding DisplayTitle}"
                                           FontWeight="SemiBold"
                                           Foreground="#CCCCCC"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center" />
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                    <!-- Iteration counter -->
                                    <TextBlock Text="{Binding IterationText}"
                                               FontSize="10"
                                               Foreground="#4EC9B0"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center"
                                               IsVisible="{Binding IterationText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                               ToolTip.Tip="Current job iteration" />
                                    <!-- Session duration -->
                                    <TextBlock Text="{Binding SessionDurationText}"
                                               FontSize="10"
                                               Foreground="#858585"
                                               VerticalAlignment="Center"
                                               IsVisible="{Binding SessionDurationText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                               ToolTip.Tip="Session duration" />
                                    <!-- Status badge -->
                                    <Border Padding="6,2" CornerRadius="2"
                                            Background="{Binding DisplayStatus, Converter={x:Static local:WorktreesView.DisplayStatusToBrushConverter}}">
                                        <TextBlock Text="{Binding StatusText}" FontSize="10" Foreground="White" />
                                    </Border>
                                </StackPanel>
                            </Grid>
                            <!-- Row 2: Branch info and actions -->
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="{Binding BranchName}"
                                               FontSize="10" Foreground="#569CD6"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="2" VerticalAlignment="Center">
                                    <!-- VS Code button -->
                                    <Button Command="{Binding OpenInVSCodeCommand}"
                                            Content="{}{}"
                                            Padding="4,2"
                                            FontSize="9"
                                            FontWeight="Bold"
                                            ToolTip.Tip="Open in VS Code"
                                            Foreground="#007ACC"
                                            IsVisible="{Binding CanOpenInVSCode}"
                                            AutomationProperties.AutomationId="{Binding Id, StringFormat='OpenInVSCode_{0}'}" />
                                    <!-- Run button -->
                                    <Button Command="{Binding RunCommand}"
                                            Content="â–¶"
                                            Padding="4,2"
                                            FontSize="8"
                                            ToolTip.Tip="Run application"
                                            Foreground="#4EC9B0"
                                            IsVisible="{Binding CanRun}"
                                            AutomationProperties.AutomationId="{Binding Id, StringFormat='RunWorktree_{0}'}" />
                                    <!-- Pause button - shown when job is running -->
                                    <Button Command="{Binding PauseJobCommand}"
                                            Content="â¸"
                                            Padding="4,2"
                                            FontSize="10"
                                            ToolTip.Tip="Pause job after current turn"
                                            Foreground="#FF9800"
                                            IsVisible="{Binding CanPauseJob}"
                                            AutomationProperties.AutomationId="{Binding Id, StringFormat='PauseJob_{0}'}" />
                                    <!-- Resume button - shown when job is paused or errored -->
                                    <Button Command="{Binding ResumeJobCommand}"
                                            Content="â–¶"
                                            Padding="4,2"
                                            FontSize="10"
                                            ToolTip.Tip="Resume job"
                                            Foreground="#4CAF50"
                                            IsVisible="{Binding CanResumeJob}"
                                            AutomationProperties.AutomationId="{Binding Id, StringFormat='ResumeJob_{0}'}" />
                                    <!-- Merge button - shown when ready to merge -->
                                    <Button Command="{Binding MergeCommand}"
                                            Content="â†—"
                                            Padding="4,2"
                                            FontSize="10"
                                            ToolTip.Tip="Merge to base branch"
                                            Foreground="#4CAF50"
                                            IsVisible="{Binding IsReadyToMerge}"
                                            AutomationProperties.AutomationId="{Binding Id, StringFormat='MergeJob_{0}'}" />
                                    <!-- Delete button -->
                                    <Button Command="{Binding DeleteCommand}"
                                            Content="âœ•"
                                            Padding="4,2"
                                            FontSize="10"
                                            ToolTip.Tip="Delete worktree"
                                            Foreground="#F44336"
                                            AutomationProperties.AutomationId="{Binding Id, StringFormat='DeleteJob_{0}'}" />
                                    <!-- Active session spinner (small) - only show when actively processing -->
                                    <Panel Classes="arc-spinner-small"
                                           IsVisible="{Binding IsProcessing}"
                                           ToolTip.Tip="Job is running">
                                        <Ellipse Stroke="#007ACC"
                                                 StrokeThickness="1.5" />
                                    </Panel>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
