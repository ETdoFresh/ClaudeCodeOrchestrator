<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ClaudeCodeOrchestrator.App.ViewModels.Docking"
             xmlns:vmBase="using:ClaudeCodeOrchestrator.App.ViewModels"
             xmlns:local="using:ClaudeCodeOrchestrator.App.Views.Panels"
             xmlns:controls="using:ClaudeCodeOrchestrator.App.Views.Controls"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
             x:Class="ClaudeCodeOrchestrator.App.Views.Panels.WorktreesView"
             x:DataType="vm:WorktreesViewModel"
             AutomationProperties.AutomationId="WorktreesPanel"
             VerticalAlignment="Stretch"
             HorizontalAlignment="Stretch"
             Background="#1E1E1E">

    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Inline new task input -->
        <controls:NewTaskInputControl Grid.Row="0"
                                      x:Name="NewTaskInput"
                                      AutomationProperties.AutomationId="NewTaskInputControl" />

        <!-- Toolbar with Push, Refresh buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="4" Margin="8,4,8,4">
            <Button Command="{Binding PushCommand}"
                    Padding="8,4"
                    FontSize="11"
                    ToolTip.Tip="Push all branches"
                    IsVisible="{Binding HasRemote}"
                    AutomationProperties.AutomationId="PushButton">
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <TextBlock Text="â¬† Push" />
                    <Border Background="#569CD6"
                            CornerRadius="8"
                            Padding="5,1"
                            VerticalAlignment="Center"
                            IsVisible="{Binding TotalCommitsToPush, Converter={x:Static local:WorktreesView.PositiveNumberConverter}}">
                        <TextBlock Text="{Binding TotalCommitsToPush}"
                                   FontSize="10"
                                   Foreground="White" />
                    </Border>
                </StackPanel>
            </Button>
            <Button Command="{Binding RefreshCommand}"
                    Content="âŸ³ Refresh"
                    Padding="8,4"
                    FontSize="11"
                    ToolTip.Tip="Refresh worktrees"
                    AutomationProperties.AutomationId="RefreshButton" />
        </StackPanel>

        <!-- Worktree list -->
        <ListBox Grid.Row="2"
                 x:Name="WorktreesList"
                 ItemsSource="{Binding Worktrees}"
                 SelectedItem="{Binding SelectedWorktree}"
                 Background="Transparent"
                 Padding="0,0,0,8">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type vmBase:WorktreeViewModel}">
                    <Border Padding="8,6" Margin="2">
                        <StackPanel Spacing="4">
                            <!-- Row 1: Title and status badge -->
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding DisplayTitle}"
                                           FontWeight="SemiBold"
                                           Foreground="#CCCCCC"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center" />
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                    <!-- Active session spinner -->
                                    <Panel Classes="arc-spinner"
                                           IsVisible="{Binding HasActiveSession}"
                                           ToolTip.Tip="Session is active">
                                        <Arc Stroke="#007ACC"
                                             StrokeThickness="2"
                                             StartAngle="0"
                                             SweepAngle="270" />
                                    </Panel>
                                    <!-- Status badge -->
                                    <Border Padding="6,2" CornerRadius="2"
                                            Background="{Binding Status, Converter={x:Static local:WorktreesView.StatusToBrushConverter}}">
                                        <TextBlock Text="{Binding StatusText}" FontSize="10" Foreground="White" />
                                    </Border>
                                </StackPanel>
                            </Grid>
                            <!-- Row 2: Branch info and actions -->
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="4">
                                    <TextBlock Text="ðŸŒ¿" FontSize="10" VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding BranchName}"
                                               FontSize="10" Foreground="#569CD6"
                                               TextTrimming="CharacterEllipsis"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="2" VerticalAlignment="Center">
                                    <!-- Session duration -->
                                    <TextBlock Text="{Binding SessionDurationText}"
                                               FontSize="10"
                                               Foreground="#858585"
                                               VerticalAlignment="Center"
                                               Margin="0,0,4,0"
                                               IsVisible="{Binding SessionDurationText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                               ToolTip.Tip="Session duration" />
                                    <Button Command="{Binding MergeCommand}"
                                            Content="â†—"
                                            Padding="4,2"
                                            FontSize="10"
                                            ToolTip.Tip="Merge to base branch"
                                            Foreground="#4CAF50"
                                            IsVisible="{Binding IsReadyToMerge}"
                                            AutomationProperties.AutomationId="{Binding Id, StringFormat='MergeWorktree_{0}'}" />
                                    <Button Command="{Binding DeleteCommand}" Content="âœ•"
                                            Padding="4,2" FontSize="10" ToolTip.Tip="Delete worktree"
                                            Foreground="#F44336"
                                            AutomationProperties.AutomationId="{Binding Id, StringFormat='DeleteWorktree_{0}'}" />
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
