<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ClaudeCodeOrchestrator.App.ViewModels.Docking"
             xmlns:vmBase="using:ClaudeCodeOrchestrator.App.ViewModels"
             xmlns:local="using:ClaudeCodeOrchestrator.App.Views.Panels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
             x:Class="ClaudeCodeOrchestrator.App.Views.Panels.WorktreesView"
             x:DataType="vm:WorktreesViewModel"
             AutomationProperties.AutomationId="WorktreesPanel"
             Background="#1E1E1E">

    <Grid RowDefinitions="*">
        <!-- Worktree list -->
        <ListBox Grid.Row="0"
                 x:Name="WorktreesList"
                 ItemsSource="{Binding Worktrees}"
                 SelectedItem="{Binding SelectedWorktree}"
                 Background="Transparent"
                 Padding="0,0,0,8">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type vmBase:WorktreeViewModel}">
                    <Border Padding="8" Margin="2">
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="{Binding TaskDescription}"
                                           FontWeight="SemiBold"
                                           Foreground="#CCCCCC"
                                           TextTrimming="CharacterEllipsis" />
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="ðŸŒ¿" FontSize="11" />
                                    <TextBlock Text="{Binding BranchName}"
                                               FontSize="11" Foreground="#569CD6" />
                                    <TextBlock Text="â†’" FontSize="11" Foreground="#666666" />
                                    <TextBlock Text="{Binding BaseBranch}"
                                               FontSize="11" Foreground="#858585" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4" VerticalAlignment="Center">
                                <!-- Session duration -->
                                <TextBlock Text="{Binding SessionDurationText}"
                                           FontSize="10"
                                           Foreground="#858585"
                                           VerticalAlignment="Center"
                                           IsVisible="{Binding SessionDurationText, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                           ToolTip.Tip="Session duration" />

                                <!-- Active session spinner -->
                                <Panel Classes="arc-spinner"
                                       IsVisible="{Binding HasActiveSession}"
                                       ToolTip.Tip="Session is active">
                                    <Arc Stroke="#007ACC"
                                         StrokeThickness="2"
                                         StartAngle="0"
                                         SweepAngle="270"
                                         Width="14"
                                         Height="14" />
                                </Panel>

                                <!-- Status badge -->
                                <Border Padding="6,2" CornerRadius="2"
                                        Background="{Binding Status, Converter={x:Static local:WorktreesView.StatusToBrushConverter}}">
                                    <TextBlock Text="{Binding StatusText}" FontSize="10" Foreground="White" />
                                </Border>

                                <Button Command="{Binding MergeCommand}" Content="â†—"
                                        Padding="6,4" FontSize="10" ToolTip.Tip="Merge to base branch"
                                        AutomationProperties.AutomationId="{Binding Id, StringFormat='MergeWorktree_{0}'}" />
                                <Button Command="{Binding DeleteCommand}" Content="âœ•"
                                        Padding="6,4" FontSize="10" ToolTip.Tip="Delete worktree"
                                        Foreground="#F44336"
                                        AutomationProperties.AutomationId="{Binding Id, StringFormat='DeleteWorktree_{0}'}" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</UserControl>
