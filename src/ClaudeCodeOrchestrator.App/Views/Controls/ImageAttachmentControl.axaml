<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="80"
             x:Class="ClaudeCodeOrchestrator.App.Views.Controls.ImageAttachmentControl">

    <Border Background="#3C3C3C"
            CornerRadius="4"
            Padding="4"
            Margin="4,0,0,0">
        <Grid>
            <!-- Image thumbnail -->
            <Border Background="#2D2D30"
                    CornerRadius="2"
                    ClipToBounds="True"
                    Width="80"
                    Height="60">
                <Image x:Name="ThumbnailImage"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            </Border>

            <!-- Remove button - positioned at top right corner -->
            <Button x:Name="RemoveButton"
                    Content="Ã—"
                    FontSize="12"
                    FontWeight="Bold"
                    Width="18"
                    Height="18"
                    Padding="0"
                    Background="#CC3333"
                    Foreground="White"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-2,-2,0"
                    CornerRadius="9"
                    Click="RemoveButton_Click"
                    ToolTip.Tip="Remove image">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#FF4444" />
                    </Style>
                </Button.Styles>
            </Button>
        </Grid>
    </Border>
</UserControl>
