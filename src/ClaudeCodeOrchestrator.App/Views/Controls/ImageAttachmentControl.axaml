<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="120" d:DesignHeight="100"
             x:Class="ClaudeCodeOrchestrator.App.Views.Controls.ImageAttachmentControl">

    <Border Background="#3C3C3C"
            CornerRadius="4"
            Padding="4"
            Margin="4,0,0,0">
        <Grid RowDefinitions="*,Auto">
            <!-- Image thumbnail -->
            <Border Grid.Row="0"
                    Background="#2D2D30"
                    CornerRadius="2"
                    ClipToBounds="True"
                    Width="80"
                    Height="60">
                <Image x:Name="ThumbnailImage"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
            </Border>

            <!-- Remove button -->
            <Button Grid.Row="1"
                    x:Name="RemoveButton"
                    Content="x"
                    FontSize="10"
                    Padding="4,2"
                    Margin="0,4,0,0"
                    Background="#6C2022"
                    Foreground="#CCCCCC"
                    HorizontalAlignment="Center"
                    Click="RemoveButton_Click"
                    ToolTip.Tip="Remove image" />
        </Grid>
    </Border>
</UserControl>
