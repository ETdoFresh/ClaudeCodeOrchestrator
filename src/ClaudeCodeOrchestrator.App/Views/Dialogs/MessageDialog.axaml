<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ClaudeCodeOrchestrator.App.Views.Dialogs.MessageDialog"
        AutomationProperties.AutomationId="MessageDialog"
        Title="Message"
        Width="400" Height="160"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        Background="#2D2D30">

    <Grid RowDefinitions="*,Auto" Margin="20">
        <StackPanel Grid.Row="0" Spacing="12">
            <TextBlock x:Name="TitleText"
                       AutomationProperties.AutomationId="MessageDialogTitle"
                       FontSize="14" FontWeight="SemiBold"
                       Foreground="#CCCCCC" />
            <TextBlock x:Name="MessageText"
                       AutomationProperties.AutomationId="MessageDialogText"
                       TextWrapping="Wrap"
                       Foreground="#AAAAAA" />
        </StackPanel>

        <Button Grid.Row="1" Content="OK" Click="OK_Click"
                AutomationProperties.AutomationId="MessageDialogOkButton"
                Width="80" HorizontalAlignment="Right"
                Margin="0,16,0,0"
                Background="#0E639C" Foreground="White" />
    </Grid>
</Window>
