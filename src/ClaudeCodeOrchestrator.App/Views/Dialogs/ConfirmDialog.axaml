<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ClaudeCodeOrchestrator.App.Views.Dialogs.ConfirmDialog"
        Title="Confirm"
        Width="400" Height="160"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        Background="#2D2D30">

    <Grid RowDefinitions="*,Auto" Margin="20">
        <StackPanel Grid.Row="0" Spacing="12">
            <TextBlock x:Name="TitleText"
                       FontSize="14" FontWeight="SemiBold"
                       Foreground="#CCCCCC" />
            <TextBlock x:Name="MessageText"
                       TextWrapping="Wrap"
                       Foreground="#AAAAAA" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal"
                    HorizontalAlignment="Right" Spacing="8" Margin="0,16,0,0">
            <Button Content="Cancel" Click="Cancel_Click" Width="80"
                    Background="#3C3C3C" Foreground="#CCCCCC" />
            <Button Content="Yes" Click="Yes_Click" Width="80"
                    Background="#0E639C" Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
