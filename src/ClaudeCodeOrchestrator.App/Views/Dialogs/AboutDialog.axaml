<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ClaudeCodeOrchestrator.App.Views.Dialogs.AboutDialog"
        AutomationProperties.AutomationId="AboutDialog"
        Title="About"
        Width="400" Height="250"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        Background="#2D2D30">

    <Grid RowDefinitions="*,Auto" Margin="20">
        <StackPanel Grid.Row="0" Spacing="12">
            <TextBlock Text="Claude Code Orchestrator"
                       AutomationProperties.AutomationId="AboutDialogTitle"
                       FontSize="18" FontWeight="SemiBold"
                       Foreground="#CCCCCC" />
            <TextBlock x:Name="VersionText"
                       AutomationProperties.AutomationId="AboutDialogVersion"
                       FontSize="13"
                       Foreground="#AAAAAA" />
            <TextBlock Text="A desktop application for orchestrating Claude Code sessions across multiple worktrees."
                       AutomationProperties.AutomationId="AboutDialogDescription"
                       TextWrapping="Wrap"
                       Foreground="#888888"
                       FontSize="12" />
            <TextBlock x:Name="GitHubLink"
                       Text="GitHub Repository"
                       AutomationProperties.AutomationId="AboutDialogGitHubLink"
                       Foreground="#0E639C"
                       FontSize="12"
                       Cursor="Hand"
                       TextDecorations="Underline"
                       PointerPressed="GitHubLink_PointerPressed" />
            <TextBlock Text="Â© 2025 ETdoFresh"
                       AutomationProperties.AutomationId="AboutDialogCopyright"
                       Foreground="#666666"
                       FontSize="11"
                       Margin="0,8,0,0" />
        </StackPanel>

        <Button Grid.Row="1" Content="OK" Click="OK_Click"
                AutomationProperties.AutomationId="AboutDialogOkButton"
                Width="80" HorizontalAlignment="Right"
                Margin="0,16,0,0"
                Background="#0E639C" Foreground="White" />
    </Grid>
</Window>
